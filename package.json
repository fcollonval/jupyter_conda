{
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mamba-org/jupyter_conda.git"
  },
  "author": "Jupyter Development Team",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/mamba-org/jupyter_conda/issues"
  },
  "homepage": "https://github.com/mamba-org/jupyter_conda",
  "scripts": {
    "build": "lerna run build",
    "build:dev": "tsc --build",
    "clean": "lerna run clean",
    "install": "lerna bootstrap",
    "publish": "yarn run clean && yarn run build && lerna publish -m \"Publish npm packages\"",
    "test": "yarn run lint && coverage run -m pytest jupyter_conda && coverage report && cd labextension && npm run eslint:check && npm run test",
    "lint": "flake8 setup.py jupyter_conda"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },  
  "workspaces": {
    "packages": [
      "packages/common",
      "packages/labextension",
      "packages/navigator"
    ],
    "nohoist": [
      "**/@types/jest",
      "**/@types/jest/**",
      "**/@types/mocha/",
      "**/@types/mocha/**",
      "**/@types/expect/",
      "**/@types/expect/**",
      "**/@types/sinon/",
      "**/@types/sinon/**"
    ]
  },
  "private": true
}
